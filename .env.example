# Environment Variables for Decentralised Crowdfunding Platform

# Private key for deployment (without 0x prefix)
# NEVER share this key or commit it to version control
PRIVATE_KEY=your_private_key_here

# Optional: Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: Enable gas reporting during tests
REPORT_GAS=true

# Network Configuration
CORE_TESTNET2_RPC_URL=https://rpc.test2.btcs.network

# Optional: Infura or Alchemy project ID for other networks
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Platform Configuration (optional - can be set after deployment)
DEFAULT_PLATFORM_FEE=250  # 2.5% in basis points
